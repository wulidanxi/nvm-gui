{
  "name": "nvm-gui",
  "version": "0.0.3",
  "description": "Vite + Electron + Vue Nvm GUI",
  "author": "wulidanxi@gmail.com",
  "main": "dist/main/index.js",
  "icon": "__dirname + 'logo.ico'",
  "scripts": {
    "dev": "vite",
    "debug": "vite -- --dsb-debug",
    "build": "rimraf dist && vue-tsc && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:main && npm run test:render",
    "test:render": "vitest run -r src/render --passWithNoTests",
    "test:main": "vitest run -r src/main --passWithNoTests",
    "test:e2e": "vitest run",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "dayjs": "^1.11.19",
    "einf": "^1.5.3",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "vue": "^3.5.26",
    "vue-router": "4"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "1.0.141",
    "@vicons/fa": "^0.13.0",
    "@vicons/ionicons5": "^0.13.0",
    "@vitejs/plugin-vue": "6.0.3",
    "@vue/compiler-sfc": "3.5.26",
    "@vue/test-utils": "2.4.6",
    "electron": "40.0.0",
    "electron-builder": "26.4.0",
    "eslint": "9.39.2",
    "happy-dom": "20.3.1",
    "lint-staged": "16.2.7",
    "naive-ui": "^2.43.2",
    "playwright": "1.57.0",
    "rimraf": "6.1.2",
    "simple-git-hooks": "2.13.1",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vfonts": "^0.0.3",
    "vite": "7.3.1",
    "vite-plugin-doubleshot": "0.0.20",
    "vitest": "4.0.17",
    "vue-tsc": "3.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}
